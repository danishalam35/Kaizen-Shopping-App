<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Preiview.Men_Preview_Activity">




    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/sliders"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:sliderIndicatorOrientation="horizontal"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/prName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Louis Philippe Jeans"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/cName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Slim Fit Mid Rise Clean Look"
                    android:fontFamily="@font/alegreya"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹"
                        android:textColor="#010101"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="45dp"
                        android:text="999"
                        android:textColor="#010101"
                        android:textSize="16dp" />
                </LinearLayout>



            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Size"
                        android:textSize="16sp"
                        android:fontFamily="@font/alegreya"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/alegreya"
                        android:text="M"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-30dp">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="50dp">


                        <com.google.android.material.chip.Chip

                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="60dp"
                            android:layout_marginLeft="20dp"
                            app:chipStrokeWidth="1dp"
                            app:chipStrokeColor="#010"
                            android:textAlignment="center"
                            android:layout_height="60dp"
                            android:textColor="#010"
                            android:text="X" />




                        <com.google.android.material.chip.Chip

                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="60dp"
                            android:layout_marginLeft="20dp"
                            app:chipStrokeWidth="1dp"
                            app:chipStrokeColor="#010"
                            android:textAlignment="center"
                            android:layout_height="60dp"
                            android:textColor="#010"
                            android:text="M" />


                        <com.google.android.material.chip.Chip

                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:text="XL"
                            android:textAlignment="center"
                            android:textColor="#010"
                            app:chipStrokeColor="#010"
                            app:chipStrokeWidth="1dp" />


                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="Product Details"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/alegreya"
                        android:textSize="16sp"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="100dp"
                        android:layout_height="wrap_content"
                        android:text="Grey Light wash 5-pocket mid rise jeans,clean look,lite
fade,has a button and zip closure."/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-70dp"
        android:background="#f2f2f2"
        >


        <Button
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"

            android:layout_marginRight="5dp"
            android:background="@drawable/login_btn"
            android:text="ADD To Bag"
            />





    </androidx.cardview.widget.CardView>


</LinearLayout>