<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBFAFA"
    tools:context=".Fragments.ProfileFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#838080">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="105dp"
                android:layout_height="115dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:elevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>

            <Button
                android:visibility="gone"
                android:id="@+id/loginSignup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="105dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/adamina"
                android:text="LOGIN/SIGN UP"
                android:textColor=" #fdfff5" />
        </LinearLayout>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="Orders"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/adamina"
                android:text="Check You Order Status"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_shopping_bags_24"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="295dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="Help Center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/adamina"
                android:text="Help regarding your recent purchase"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_help_center_24"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="295dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="Wishlist"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/adamina"
                android:text="Your most loved style"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_likebdred"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="295dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="Notification"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/adamina"
                android:text="Stay on top all fashion related updates"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_notifications_24"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="295dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:layout_marginTop="2dp"
            android:textColor="#5F5E5E"
            android:fontFamily="@font/adamina"
            android:text="FAQs"
            android:padding="15dp"
            android:layout_marginLeft="35dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:layout_marginTop="2dp"
            android:textColor="#5F5E5E"
            android:fontFamily="@font/adamina"
            android:text="ABOUT US"
            android:padding="15dp"
            android:layout_marginLeft="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/logiout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:background="@drawable/logout_btn"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/adamina"
            android:text="Logout"
            android:textColor="#730824"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>
</LinearLayout>